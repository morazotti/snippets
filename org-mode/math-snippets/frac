# -*- mode: snippet -*-
# name: frac
# key: //
# type: snippet
# group: math
# condition: (and (org-inside-LaTeX-fragment-p) 'auto)
# --
`(let ((argument t))
  (condition-case nil
    (progn
      (backward-sexp)
      (kill-sexp)
      (delete-char 1))
    (error (setq argument 'nil)))
    (insert "\\frac{" (if argument (current-kill 0)) "}"))`{$0}